<?xml version="1.0" encoding="utf-8" standalone="yes"?>
<Template isFullResponsive="true">
    <Name>FlatNEazy</Name>
    <Author>OBME GmbH</Author>
    <URL>https://obme.de</URL>
    <Parent>Evo</Parent>
    <Preview>preview.png</Preview>
    <Description>Simples Flat Design aber "Kinda Sexy"</Description>
    <Settings>
        <Section Name="Theme" Key="theme">
            <Setting Description="Theme" Key="theme_default" Type="select" Value="light" override="true">
                <Option Value="light">Light - Hell und freundlich!</Option>
            </Setting>
        </Section>
    </Settings>
    <Minify>
        <CSS Name="light.css">
            <File Path="./themes/light/bootstrap.css"/>
            <File Path="../Evo/themes/base/offcanvas-menu.css"/>
            <File Path="../Evo/themes/base/pnotify.custom.css"/>
            <File Path="../Evo/themes/base/jquery-slider.css"/>
            <File Path="css/light.css"/>
        </CSS>
    </Minify>
    <Boxes>
        <Container Position="left" Available="1" />
        <Container Position="right" Available="0" />
        <Container Position="top" Available="0" />
        <Container Position="bottom" Available="1" />
    </Boxes>
</Template>